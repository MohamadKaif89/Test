<section class="collection-product">
  <div class="collection-container">
    <div class="coll-prdoduct-con">
      <div class="coll-product-row">
        <h2>{{section.settings.main_heading}}</h2>
        <a href="{{section.settings.main_link}}">View All</a>
      </div>
    </div>

    <div class="collection-row">
      <div class="coll-left-item">
        {% assign p_collection =collections[section.settings.collection_get] %}
        <div class="coll-img">
          {% if p_collection.featured_image != blank %}


          <img src="{{p_collection.featured_image |  image_url }}" alt="" width="" height="">
          {% endif %}
        </div>
        <div class="coll-content">
          <h2>{{p_collection.title}}</h2>
          <p>{{p_collection.description}}</p>
          <div class="coll-button">
            <a href="{{p_collection.url}}">{{section.settings.left_button_text}}</a>
          </div>
        </div>

      </div>
      <div class="coll-right-item">
        {% for block in section.blocks %}


        <div class="coll-content-wrapper">
          <div class="product-img">
            {% assign product = all_products[block.settings.product] %}
            <img src="{{product.featured_image |  image_url }}" alt="" width="" height="">
          </div>
          <div class="product-content">
            <p class="vendor">{{product.vendor}}</p>
            <p class="title">{{product.title}}</p>
            <p class="price">{{product.price | money}}</p>
            <div class="product-button">
              <a href="{{product.url}}">{{block.settings.button_text}}</a>
            </div>
          </div>
        </div>
        {% endfor %}

      </div>

    </div>
  </div>
</section>
{% schema %}
{
"name": "Collection Product",
"settings": [
{
"type": "text",
"id": "main_heading",
"label": "Main Heading"
},
{
"type": "url",
"id": "main_link",
"label": "Main Link"
},
{
"type": "collection",
"id": "collection_get",
"label": "Select Collection"
},


{
"type": "image_picker",
"id": "left_image",
"label": "Left Side Image"
},
{
"type": "text",
"id": "left_title",
"label": "Left Title"
},
{
"type": "textarea",
"id": "left_description",
"label": "Left Description"
},
{
"type": "text",
"id": "left_button_text",
"label": "Left Button Text"
},
{
"type": "url",
"id": "left_button_url",
"label": "Left Button Link"
}
],

"blocks": [
{
"type": "product_item",
"name": "Right Product",
"settings": [
{
"type": "product",
"id": "product",
"label": "Select Product"
},
{
"type": "text",
"id": "button_text",
"label": "Button Text"

}
]
}
],


"presets": [
{
"name": "Collection Product"
}
]
}

