<footer class="custom-footer">
  <div class="footer-container">
    <div class="footer-row">


      <div class="flex-1-item">
        <div class="flex-1-inner-item">


          <div class="logo">
            {% if section.settings.footer_logo != blank %}
            <img src="{{ section.settings.footer_logo | image_url }}" alt="footer logo" width="" height="">
            {% endif %}
          </div>


          <div class="logo-inner-text">
            <p>{{ section.settings.footer_description }}</p>
          </div>


          <div class="social-icons">
            {% for block in section.blocks %}
            {% if block.type == 'social_icon' %}
            <a href="{{ block.settings.icon_link }}">
              <img src="{{ block.settings.icon_img | image_url }}" alt="social icon" width="" height="">
            </a>
            {% endif %}
            {% endfor %}
          </div>

        </div>
      </div>



      <div class="flex-2-item">
        <p class="same">{{ section.settings.menu_title }}</p>
        <ul>
          {% for link in linklists[section.settings.footer_menu].links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>



      <div class="flex-3-item">
        <p class="same">{{ section.settings.newsletter_title }}</p>
        <p>{{ section.settings.newsletter_text }}</p>

        <div class="footer-input">
          <input type="text" placeholder="{{ section.settings.input_placeholder }}">
          {% if section.settings.input_icon != blank %}
          <img src="{{ section.settings.input_icon | image_url }}" alt="arrow icon" width="" height="">
          {% endif %}
        </div>
      </div>

    </div>


    <div class="last-p">
      <p>{{ section.settings.bottom_text }}</p>
    </div>

  </div>
</footer>


{% schema %}
{
"name": "Custom Footer",
"settings": [
{
"type": "image_picker",
"id": "footer_logo",
"label": "Footer Logo"
},
{
"type": "textarea",
"id": "footer_description",
"label": "Footer Description",
"default": "Write your footer description here"
},

{
"type": "text",
"id": "menu_title",
"label": "Menu Title",
"default": "Quick Links"
},
{
"type": "link_list",
"id": "footer_menu",
"label": "Select Footer Menu"
},

{
"type": "text",
"id": "newsletter_title",
"label": "Newsletter Title",
"default": "Newsletter"
},
{
"type": "textarea",
"id": "newsletter_text",
"label": "Newsletter Description",
"default": "Subscribe to get updates"
},
{
"type": "text",
"id": "input_placeholder",
"label": "Input Placeholder",
"default": "Enter your email"
},
{
"type": "image_picker",
"id": "input_icon",
"label": "Input Icon"
},

{
"type": "text",
"id": "bottom_text",
"label": "Footer Bottom Text",
"default": "Â© 2025 AlliedComponent. Powered by Shopify"
}
],

"blocks": [
{
"type": "social_icon",
"name": "Social Icon",
"settings": [
{
"type": "image_picker",
"id": "icon_img",
"label": "Social Icon Image"
},
{
"type": "url",
"id": "icon_link",
"label": "Social Icon Link"
}
]
}
],

"presets": [
{
"name": "Custom Footer"
}
]
}
{% endschema %}

