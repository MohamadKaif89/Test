{% if product %}
  <section class="product-wrapper">
    <div class="product-left">
      <div class="slider-main">
        {% for image in product.images %}
          <div
            class="slide-box"
            data-color="{{ image.alt | downcase }}"
          >
            <img src="{{ image | image_url: width: 600 }}" width="" height="">
          </div>
        {% endfor %}
      </div>
      <div class="color-selectors">
        {% assign colors_added = '' %}

        {% for image in product.images %}
          {% assign img_color = image.alt | split: ' ' | first | downcase %}

          {% unless colors_added contains img_color %}
            <button
              class="color-btn"
              data-color="{{ img_color }}"
            >
              {{ img_color }}
            </button>
            {% assign colors_added = colors_added | append: img_color | append: ',' %}
          {% endunless %}
        {% endfor %}
      </div>
    </div>

    <div class="product-right">
      <h1 class="product-title">{{ product.title }}</h1>

      <div class="product-reviews"><p>* * * * * *</p></div>

      {% if product.selected_or_first_available_variant.sku != blank %}
        <p class="product-sku"><strong>SKU:</strong> {{ product.selected_or_first_available_variant.sku }}</p>
      {% endif %}

      <div class="product-pricing">
        {% assign v = product.selected_or_first_available_variant %}

        {% if v.compare_at_price > v.price %}
          <p class="compare-price1">
            <s>{{ v.compare_at_price | money }}</s>
          </p>
        {% endif %}

        <div class="price-right">
          <p class="price">{{ v.price | money }}</p>

          {% if v.compare_at_price > v.price %}
            {% assign save_amount = v.compare_at_price | minus: v.price %}
            {% assign save_percent = save_amount | times: 100 | divided_by: v.compare_at_price %}
            <p class="save-percent">Save {{ save_percent | round }}%</p>
          {% endif %}
        </div>
      </div>

      <p class="product-description">{{ product.description }}</p>

      <div class="product-buttons">
        <button class="buy-now">Buy Now</button>

        <form method="post" action="{{ routes.cart_add_url }}">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          <button type="submit" class="add-cart">Add to Cart</button>
        </form>
      </div>
    

      <div class="accordion">
        <h2>FAQ</h2>
        <div class="acc-item">
          <button class="accordian-btn">Product Description <span class="icon">+</span></button>
          <div class="acc-content">{{ product.description }}</div>
        </div>

        <div class="acc-item">
          <button class="accordian-btn">Material <span class="icon">+</span></button>
          <div class="acc-content">
            {{ product.metafields.custom.materials | default: 'No material added.' }}
          </div>
        </div>

        <div class="acc-item">
          <button class="accordian-btn">Key Features <span class="icon">+</span></button>
          <div class="acc-content">
            {% assign features = product.metafields.custom.keyfeatures %}
            {% if features %}
              <ul>
                {% for f in features %}
                  <li>{{ f }}</li>
                {% endfor %}
              </ul>
            {% else %}
              No key features listed.
            {% endif %}
          </div>
        </div>

        <div class="acc-item">
          <button class="accordian-btn">Others <span class="icon">+</span></button>
          <div class="acc-content">
            {% assign other = product.metafields.custom.others %}
            {% if other %}
              {% assign entry = other.value | default: other %}
              {% if entry.title %}
                <h4>{{ entry.title }}</h4>
              {% endif %}
              {% if entry.description %}
                {{ entry.description | metafield_tag }}
              {% endif %}
            {% else %}
              No other details.
            {% endif %}
          </div>
        </div>
        <div>
          {% assign data = product.metafields.custom.kaif_practice %}
          {% if data %}
            <ul>
              {{ data }}
            </ul>
          {% else %}
            <p>No Meta fields data fetch</p>
          {% endif %}
          {% comment %} <h2>{{ product.metafields.custom.kaif_practice }}</h2> {% endcomment %}
          <h2>{{ product.metafields.custom.practice_multiline }}</h2>
        </div>
      </div>
    </div>
  </section>
{% endif %}

