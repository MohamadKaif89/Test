<script>
  document.querySelectorAll('.color-btn').forEach((btn) => {
    btn.addEventListener('click', function () {
      const selectedColor = this.dataset.color.toLowerCase();

      const targetSlide = document.querySelector(`.slide-box[data-color*="${selectedColor}"]`);

      if (targetSlide) {
        targetSlide.scrollIntoView({
          behavior: 'smooth',
          inline: 'center',
        });
      }
    });
  });
  document.querySelectorAll('.accordian-btn').forEach((btn) => {
    btn.addEventListener('click', function () {
      const item = this.parentElement;
      const icon = this.querySelector('.icon');

      item.classList.toggle('active');

      if (item.classList.contains('active')) {
        icon.textContent = '-';
      } else {
        icon.textContent = '+';
      }
    });
  });
</script>
