<section class="resources">
  <div class="resource-container">
    <div class="resource-inner-con">


      <div class="resource-inner-row">
        <h2>{{ section.settings.main_heading }}</h2>
        <a href="{{ section.settings.main_link_url }}">{{ section.settings.main_link_text }}</a>
      </div>


      <div class="resource-row">
        {% for block in section.blocks %}
        <div class="resource-content">

          <div class="resource-img">
            {% if block.settings.resource_image != blank %}
            <img src="{{ block.settings.resource_image | image_url }}" alt="" width="" height="">
            {% endif %}
          </div>

          <div class="resource-h3">
            <h3>{{ block.settings.resource_title }}</h3>
          </div>

        </div>
        {% endfor %}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
"name": "Resources Section",
"settings": [
{
"type": "text",
"id": "main_heading",
"label": "Main Heading",
"default": "Resources"
},
{
"type": "text",
"id": "main_link_text",
"label": "Main Link Text",
"default": "View all"
},
{
"type": "url",
"id": "main_link_url",
"label": "Main Link URL"
}
],

"blocks": [
{
"type": "resource_block",
"name": "Resource Block",
"settings": [
{
"type": "image_picker",
"id": "resource_image",
"label": "Resource Image"
},
{
"type": "text",
"id": "resource_title",
"label": "Resource Heading",
"default": "Resource Title"
}
]
}
],

"presets": [
{
"name": "Resources Section"
}
]
}
{% endschema %}

