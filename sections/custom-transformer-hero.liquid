<section>
    <div class="transformer-container">


        <div class="transformer-banner">
            {% if section.settings.banner_image != blank %}
            <img src="{{section.settings.banner_image |  image_url }}" alt="" width="banner" height="">
            {% else %}
            <img src="{{'Rectangle_10.png.png' |  asset_url}}" alt="banner" width="" height="">
            {% endif %}

        </div>
        <div class="inner-container">
            <h2>{{ section.settings.heading }}</h2>
            <p>{{ section.settings.description }}</p>
            <div class="transformer-button-p">
                <div class="transformer-button">
                    <a href="{{section.settings.button_link}}">{{section.settings.button_text}}</a>
                </div>
            </div>
        </div>

    </div>
</section>
{% schema %}
{
"name": "Transformer Section",
"settings": [
{
"type": "image_picker",
"id": "banner_image",
"label": "Banner Image"
},
{
"type": "text",
"id": "heading",
"label": "Heading H2)",
"default": "Transformer Conductors â€“ Optimize Efficiency & Durability"

},
{
"type": "textarea",
"id": "description",
"label": "Paragraph Text"



},
{
"type": "text",
"id": "button_text",
"label": "Button Text"

},
{
"type": "url",
"id": "button_link",
"label": "Button Link"
}
],
"presets": [
{
"name": "Transformer Section"
}
]
}
{% endschema %}
