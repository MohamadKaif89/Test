{% if product.tags.size > 0 %}
  {% assign current_tags = product.tags %}
  {% assign count = 0 %}

  <section class="you-may-also-like">
    <h2>You May Also Like</h2>
    <div class="also-products">

      {% for coll in product.collections %}
        {% for p in coll.products %}

          {% if p.id != product.id and count < 4 %}

            {% assign tag_match = false %}

            {% for mytag in current_tags %}
              {% assign myclean = mytag | downcase | strip %}

              {% for othertag in p.tags %}
                {% assign otherclean = othertag | downcase | strip %}
                {% if myclean == otherclean %}
                  {% assign tag_match = true %}
                {% endif %}
              {% endfor %}

            {% endfor %}

            {% if tag_match %}
              <div class="also-product-card">
                <a href="{{ p.url }}">
                  {% if p.featured_image %}
                    <img src="{{ p.featured_image | image_url: width: 350 }}" alt="{{ p.title }}" width="" height="">
                  {% endif %}
                  <p>{{ p.title }}</p>
                  <span>{{ p.price | money }}</span>
                </a>
              </div>
              {% assign count = count | plus: 1 %}
            {% endif %}

          {% endif %}

        {% endfor %}
      {% endfor %}

    </div>
  </section>
{% endif %}

<style>
.you-may-also-like {
  padding: 30px 0;
  background-color: #cabdbd;
  text-align: center;
}

.you-may-also-like h2 {
  font-weight: 600;
}

.also-products {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: space-between;
}

.also-product-card {
  width: calc(25% - 15px);
  background-color: #4f4b44;
  border-radius: 8px;
  padding: 10px;
  text-align: center;
  border: 1px solid #eee;
}

.also-product-card img {
  width: 100%;
  height: 250px;
  object-fit: contain;
  border-radius: 6px;
}

.also-product-card p {
  font-size: 1.3rem;
  margin: 5px 0;
  font-weight: 700;
  color: beige;
}

.also-product-card span {
  font-weight: bold;
  font-size: 1.4rem;
  color: white;
}

